<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <kdh.demo.piechart.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="338dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the values"/>
            <EditText
                android:id="@+id/edt_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="3 6 7 8 9 4"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update"
                />
            <Button
                android:id="@+id/btn_update_together"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update Together"
                />
            <Button
                android:id="@+id/btn_update_sequentially"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Update Sequentially"
                />
        </LinearLayout>




    </LinearLayout>


</ScrollView>